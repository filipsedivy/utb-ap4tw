{form userForm, class: "card"}
    <div class="card-body">
        <div class="form-group">
            {label name}
            {input name, class: "form-control"}
        </div>

        <div class="form-group">
            {label username}
            {input username, class: "form-control"}
        </div>

        <div class="form-group">
            {label email}
            {input email, class: "form-control"}
        </div>

        <div class="form-group">
            {label password}
            {input password, class: "form-control", autocomplete: "new-password"}
        </div>
    </div>

    <div class="card-footer">
        {input save, class: 'btn btn-success'}
    </div>
{/form}