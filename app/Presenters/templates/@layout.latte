<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <title>{ifset title}{include title|stripHtml} | {/ifset}CRM Systém</title>
</head>

<body class="bg-light">

<nav class="navbar navbar-expand navbar-dark bg-primary">
    <a class="sidebar-toggle mr-3" href="#"><i class="fa fa-bars"></i></a>
    <a class="navbar-brand" n:href="Homepage:">CRM Systém</a>

    <div class="navbar-collapse collapse">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                <a href="#" id="dd_user" class="nav-link dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-fw fa-user"></i> {$user->identity->name}</a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd_user">
                    <a n:href="Profile:" class="dropdown-item">Profil</a>
                    <a n:href="Sign:out" class="dropdown-item">Odhlásit se</a>
                </div>
            </li>
        </ul>
    </div>
</nav>

<div class="d-flex">
    <div class="sidebar sidebar-dark bg-dark">
        {control menu}
    </div>

    <div class="content p-4">
        <div class="row">
            <div class="col pr-2">
                <h2 class="mb-4" n:block="title">
                    {ifset $pageInfo->backlink}
                        <a href="{$pageInfo->backlink}" class="backlink">
                            <i class="fas fa-fw fa-arrow-circle-left"></i>
                        </a>
                    {/ifset}
                    {ifset $pageInfo->title}{$pageInfo->title}{/ifset}
                </h2>
            </div>

            <div class="col pl-2 float-right text-right" n:inner-block="RightHeader">

            </div>
        </div>

        {include content}
    </div>
</div>

<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

<script src="{webpack application.js}"></script>
</body>
</html>
